<div class="mt-5 offset-2 col-6"  style="position: absolute; left: 90px; right: 100px; width: auto" >


  <div class="col">
    <!--render small header-->
    <div class="offset-2 col-8 mx-auto">
      <div class="card border-secondary p-4 justify-content-center bg-light ">

        <div class="card border-light col-3 bg-light">
          <%= @article.user.first_name%>
          <%= @article.user.last_name%>
        </div> 

        <div class="card border-light col-3">
          <div class="d-flex justify-content-around bg-light ">
            <span class="badge rounded-pill bg-success ">Approved <span class="badge rounded-pill bg-primary">1</span></span>                
            <span class="badge rounded-pill bg-warning">Need Review <span class="badge rounded-pill bg-primary">1</span></span>
            <span class="badge rounded-pill bg-danger">Not Approved <span class="badge rounded-pill bg-primary">1</span></span>
          </div>
        </div>

        <div class="card border-light bg-light ">
          <h3><center><%= @article.title%><center><h3>
        </div> 

        <div>   
          <br><br> 
        </div>

        <div class="card border-secondary p-0 bg-light ">  
          <div class="card-header">Résumé</div>
          <div class="card-body justify-content-center">
            <%= @article.summary%>
          </div>
        </div>  

        <div>   
          <br> 
        </div>

        <div class="card border-light p-4 justify-content-center bg-light ">  
          <div class="card-header">Protocole</div>
          <div class="card-body justify-content-center">
            <%= @article.protocol%>
          </div> 
        </div> 

        <div>   
          <br> 
        </div>

        <div class="card border-light p-4 justify-content-center bg-light ">  
          <div class="card-header">Résultats</div>
          <div class="card-body justify-content-center">
            <%= @article.result%>
          </div>  
        </div> 
        
        <div>   
            <br> 
          </div>
          <div class="card border-light p-4 justify-content-center bg-light ">  
          <div class="card-header">Conclusion</div>
        <%= @article.conclusion%>
                </div>  
        <div>   
            <br> 
          </div>
          <div class="card border-light p-4 justify-content-center bg-light ">  
          <div class="card-header">Références</div>
        <%= @article.references%>
                </div>  

        </div>
      </div>
    </div>
  </div>

</div>