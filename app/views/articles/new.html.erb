<%= stylesheet_link_tag "article_new" %>
<div class="col">
  <div class="offset-2 col-8 mx-auto">
  
    <div class="card border-secondary p-4 text-center justify-content-center bg-light above-small ">
         
         <% if user_signed_in? && current_user.avatar.attached? %> 
          <%= image_tag(current_user.avatar, class: 'rounded-circle', style: "width: 5em; height: 5em") %>
        <% elsif user_signed_in? %>
          <%= image_tag(asset_path('default_avatar.png'), class: 'rounded-circle', style: "width: 5em; height: 5em") %>
        <% else %>
          <%= image_tag(asset_path('default_avatar.png'), class: 'rounded-circle', style: "width: 5em; height: 5em") %>
        <% end %>
         
          <h3>Publier un article</h3>
          <%= form_tag url_for(action: 'create', method: "post", class: 'text-center form-group,form-control')do %>
          <div class="card-header"><%= label_tag 'Titre' %></div>
          <%= text_field_tag 'title', nil, class:"form-control" %>
          <br>
          <%= label_tag 'Résumé' %>
          <%= text_area_tag 'summary', nil, class:"form-control" %>
          <br>
          <%= label_tag 'Introduction' %>
          <%= text_area_tag 'introduction', nil, class:"form-control" %>
          <br>
          <%= label_tag 'Protocole' %>
          <%= text_area_tag 'protocol', nil, class:"form-control" %>
          <br>
          <%= label_tag 'Résultats' %>
          <%= text_area_tag 'result', nil, class:"form-control" %>
          <br>
          <%= label_tag 'Conclusion' %>
          <%= text_area_tag 'conclusion', nil, class:"form-control" %>
          <br>
          <%= label_tag 'Références' %>
          <%= text_area_tag 'references', nil, class:"form-control" %>
          <br>
          <br>
          <%= submit_tag "Publier mon article", class: "mt-3 btn btn-lg btn btn-success"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>