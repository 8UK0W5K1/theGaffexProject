<div class="container mt-4 mb-2 text-center">
    <h3>Me connecter</h3>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field mt-2">
    <%= f.label :email, " Email", class:"mt-3"%></br>
    <%= f.email_field :email, autofocus: true, class: 'form-control-lg', autocomplete: "email" %>
  </div>

  <div class="field mt-2">
    <%= f.label :password , " Mot de passe", class:"mt-3"%></br>
    <%= f.password_field :password,  class: 'form-control-lg', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %><br/>
    <div class="field mt-2">
      <%= f.check_box :remember_me %>
      <%= f.label :se_souvenir_de_moi %>
    </div>
  <% end %>

  <div class="actions m-2">
    <%= f.submit "Me connecter", class: "btn btn-lg btn-secondary border-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>