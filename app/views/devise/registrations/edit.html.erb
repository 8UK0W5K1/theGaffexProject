  <div class="offset-2 col-12 col-xl-6 mx-auto">
    <div class="card text-center border-secondary py-4 bg-light above-small shadow-lg">
    <div class="row">
      <div class="col-6">
          <h3>Modifier mon compte</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-2">
    <%= f.label :email, " Email", class:"mt-3"%></br>
    <%= f.email_field :email, autofocus: true, class: 'form-control-lg', autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mt-2">
    <%= f.label :password, "Nouveau mot de passe", class:"mt-3"%></br> <i>(Laisser vide pour le conserver)</i><br />
    <%= f.password_field :password, class: 'form-control-lg', autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> Caractères minimum</em>
    <% end %>
  </div>

  <div class="field mt-2">

  <%= f.label :password_confirmation, "Confirmation du mot de passe", class:"mt-3"%></br>
    <%= f.password_field :password_confirmation, class: 'form-control-lg', autocomplete: "new-password" %>
  </div>

  <div class="field mt-2">
    <%= f.label :current_password, "Ancien mot de passe", class:"mt-3"%><small class="text-danger ms-1 fs-5">*</small></br>
    <%= f.password_field :current_password, class: 'form-control-lg', autocomplete: "current-password" %>
  </div>

  <div class="actions mt-2">
    <%= f.submit "Mise à jour", class: "m-2 btn btn-lg btn-primary border-primary" %>
    <p class="mt-4"><small class="text-danger me-2 fs-5">*</small>champs obligatoires</p>
  </div>
<% end %>
</div>
  <div class="vr"></div>
      <div class="col-5 m-auto p-auto text-center align-content-center">
    <h3 class="bt-5">Supprimer mon compte</h3>
    <div class="mt-4">
      <h6>Vous souhaitez quitter la communauté Gaffex?</h6>
    </div>
    <%= button_to "Supprimer", registration_path(resource_name), data: { confirm: "Vous êtes sûr ?" }, class: "btn btn-lg btn-danger border-primary m-2", method: :delete %></p>

    <span class="mb-3"><%= link_to "Retour", root_path %></span>

      </div>
    </div>
    
</div>
</div>
